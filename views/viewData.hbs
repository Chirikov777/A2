<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8" />
		<title>Stan's Gallery - The Seven Wonders</title>
		<style>
			div#divUsername
			{
				color: #00f;
				opacity: 1;
				top: 0;
				transition: opacity 1s ease-out;
				position: absolute;
			}
			div#divLogout
			{
				left: 0;
				top: 0;
				position: absolute;
			}
			a#aLogout
			{
				opacity: 0;
				text-decoration: underline;
				transition: opacity 1s ease-in;
			}
			div.clsUsernameLogout:hover div#divUsername
			{
				opacity: 0;
			}
			div.clsUsernameLogout:hover a#aLogout
			{
				opacity: 1;
			}
		</style>
	</head>

	<body>
		{{#with data}}
		<form method="get" action="/">
			<div class="clsUsernameLogout">
				<div id="divUsername">{{login}}</div>
				<div id="divLogout"><a id="aLogout"><button type="Submit" value="">Logout</button></a></div>
			</div>
		</form>
		<form method="post" action="/gallery">
			<h1>The Seven Wonders of the Ancient World</h1>
			<div>
        		<ul>
                    {{#each imageList}}
                        <input type="radio" name="chooseImage" id="{{.}}" value="{{.}}" default="The Map of Wonders"> <label for="{{.}}">{{.}}</label><br>
                    {{/each}}
                </ul>
				<button type="Submit" value="Submit">Submit</button>
			</div>
		</form>
			<div>
				<img src="{{imagePath}}" alt="Image not found"/>
			</div>

			<div>
				{{inputData}}
			</div>
		{{/with}}
	</body>
</html>